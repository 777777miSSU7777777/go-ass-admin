{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@model": ["./src/db/model"],
      "@service": ["./src/service"],
      // "@controller": ["./src/controller"],
      "@controller/*": ["./src/controller/*"],
    }
  }
}
